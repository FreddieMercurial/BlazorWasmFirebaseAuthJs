{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "noEmit": false,
    "target": "es6",
    "outDir": "build",
    "skipLibCheck": true
  },
  "typeRoots": [ "types" ],
  "typingOptions": {
    "enableAutoDiscovery": true
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "build/**/*"
  ],
  "files": [
    "src/index.ts"
  ]
}